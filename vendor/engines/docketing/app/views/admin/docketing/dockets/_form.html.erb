<% back = url_for(:back) %>
<%= form_for [:admin, :docketing, @docket] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @docket,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.docketing.docket'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @docket.name),
                :delete_url => ( @docket.persisted? ? admin_docketing_docket_path( @docket ) : nil ),
                :back => back,
                :cancel_url => ((back.include?('javascript') or action_name =~ /^(create|update)$/) ? send("admin_docketing_dockets_url") : back)
              } %>
<% end -%>

