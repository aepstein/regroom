<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(perspective) -%>">
  <span class='title'>
    <%= perspective.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), docketing_perspective_url(perspective),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_docketing_perspective_path(perspective),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_docketing_perspective_path(perspective),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => perspective.name),
        :method => :delete %>
  </span>
</li>

