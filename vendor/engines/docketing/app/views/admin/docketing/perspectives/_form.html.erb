<%= form_for [:admin, :docketing, @docket_perspective] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @docket_perspective,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.docketing.perspectives.perspective'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @docket_perspective.name)
              } %>
<% end -%>

