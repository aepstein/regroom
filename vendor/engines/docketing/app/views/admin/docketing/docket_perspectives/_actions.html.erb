<ul>
  <% if Admin::DocketPerspectivesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_docket_perspectives_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_docket_perspective_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::DocketPerspectivesController.sortable? and DocketPerspective.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "DocketPerspectives"),
                 admin_docket_perspectives_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "DocketPerspectives"),
                 admin_docket_perspectives_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>

