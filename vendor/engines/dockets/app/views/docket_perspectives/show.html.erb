<% content_for :body_content_title do %>
  <%= @perspective.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @perspective.name %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="docket_perspectives">
      <% @perspectives.each do |perspective| %>
        <li>
          <%= link_to perspective.name, docket_perspective_path(perspective) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>

